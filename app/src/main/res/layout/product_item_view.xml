<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:background="@drawable/border"
    tools:ignore="RtlHardcoded">

    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill"
        android:clickable="true"
        android:contentDescription=""
        android:scaleType="fitXY"
        tools:ignore="ContentDescription">

    </ImageView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_new_cloth"
        android:src="@drawable/new_flag"
        android:layout_gravity="top"/>
    <ImageView
        android:id="@+id/img_checked_cloth"
        android:layout_width="@dimen/color_checked_size"
        android:layout_height="@dimen/color_checked_size"
        android:layout_gravity="center"
        android:src="@drawable/checked_mark_white"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtClothCode"
            style="@style/AppTheme.ListItemText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>

    </LinearLayout>
</FrameLayout>